{% extends 'page.html.twig' %}
{#
/**
 * @file
 * Default theme implementation to display a 403 and 404 error page.
 */
#}
{% set return_back_title = 'Return to the previous page' %}
{% set return_back_label = 'back' %}
{% set return_back_script = '<a href="javascript:history.back();" title="@title">@label</a>'|t({ '@title': return_back_title, '@label': return_back_label}) %}

{% block page_body %}
  <div class="Grid">
    <div class="Grid-cell Grid-cell--center u-size10of12 u-sm-size8of12 u-md-size5of12 u-lg-size4of12">
      <div class="ErrorPage u-textCenter u-text-xxs u-text-md-xs u-text-lg-s">
        <h1 class="ErrorPage-title">{{ error_code }}</h1>
        <h2 class="ErrorPage-subtitle">{{ subtitle|t }}</h2>
        <p class="Prose u-margin-r-all">{{ text|t({'@return_back': return_back_script}) }}</p>
        <a class="Button Button--default u-margin-r-all" href="/">
          {{ return_home|t|upper }}
        </a>
      </div>
    </div>
  </div>
{% endblock %}
