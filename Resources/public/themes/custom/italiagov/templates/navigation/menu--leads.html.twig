{#
/**
 * @file
 * Theme override to display a leads menu.
 *
 * NOTE: only the first level of the menu will be printed.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {%
  set ul_classes = [
    'Grid',
    'Grid--withGutter'
  ]
  %}
  {%
  set li_classes = [
    'Grid-cell',
    'u-sizeFull',
    'u-md-size1of4',
    'u-lg-size1of4'
  ]
  %}
  {%
  set link_classes = [
    'Leads-link',
    'u-color-black'
  ]
  %}
  {% if items %}
    <ul{{ attributes.addClass(ul_classes) }}>
    {% for item in items %}
      <li{{ item.attributes.addClass(li_classes) }}>
        {{ link(item.title, item.url, {'class' : link_classes}) }}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
