{#
/**
 * @file
 * Theme override for a menu system_menu_block in the leads region.
 */
#}
{%
set classes = [
  'u-padding-r-bottom',
  'u-padding-r-top'
]
%}
{%
set title_classes = [
  'u-text-h3',
  'u-layout-centerLeft'
]
%}
<div{{ attributes.addClass(classes)|without('role', 'aria-labelledby') }}>
  {{ title_prefix }}
  <h2{{ title_attributes.addClass(title_classes)}}>{{ configuration.label }}</h2>
  {{ title_suffix }}
  {# Menu. #}
  {% block content %}
    {{ content }}
  {% endblock %}
</div>
